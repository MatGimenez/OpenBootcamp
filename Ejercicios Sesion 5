{
    case 1:
        Console.WriteLine("Has escogido C#, Excelente!!");
        break;

    case 2:
        Console.WriteLine("Has elegido Java, muy bien!!!");
        break;

    case 3:
        Console.WriteLine("Has querido adentrarte en el mundo de PHP, super!!!");
        break;

    default: Console.WriteLine("Ups!, parece que no has elegido ninguno. Lamentamos no tener Lenguajes de Programaci贸n que te interesen. Vuelve Pronto :D");
        break;
}
